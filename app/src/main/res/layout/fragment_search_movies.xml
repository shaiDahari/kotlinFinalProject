<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- כאן תוכל להוסיף משתנים אם יש צורך -->
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="16dp">

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_movie_title"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/editDirector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_movie_director"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_movie_description"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:minLines="3"
                android:gravity="top|start"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/editGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_movie_genre"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/buttonSelectPoster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/movie_poster"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/buttonSelectReleaseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/movie_release_date"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/movie_rating"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:progressTint="@color/gold"
                android:numStars="5"
                android:stepSize="0.5"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/buttonSaveMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_save"
                android:backgroundTint="@color/light_blue"
                android:textColor="@color/white"
                android:padding="12dp"/>

        </LinearLayout>
    </ScrollView>
</layout>